<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/setAsLl"
    tools:context=".activity.SetAsWallpaperActivity">


    <RelativeLayout
        android:background="@color/colorLightBackground"
        android:id="@+id/backgroundColorRl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/toolRl"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_close_black_24dp"
                />

            <ImageButton
                android:id="@+id/shareImageBtn"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_share_white_24dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/toolRl"
            android:id="@+id/wallpaperImageRl"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">


            <com.dmallcott.dismissibleimageview.DismissibleImageView
                android:elevation="50dp"
                android:id="@+id/wallpaperImageIv"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/loading" />
        </RelativeLayout>


        <LinearLayout

            android:layout_marginBottom="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
         >

<LinearLayout
    android:background="@drawable/ripple_effect"
    android:layout_marginRight="20dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="80dp">
        <ImageButton

            android:id="@+id/saveWallpaperBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/round_button"
            android:elevation="4dp"
            android:src="@drawable/ic_file_download_white_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <com.TolKap.agarshan.tamilwallpaper.custom.CustomFontTextView
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:textSize="10dp"
        android:layout_height="20dp"
        android:text="DOWNLOAD"/>
    </LinearLayout>

</LinearLayout>
<LinearLayout
    android:layout_marginRight="20dp"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="80dp">
    <ImageButton
        android:id="@+id/setAsWallpaperBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_wallpaper_white_24dp"
        android:background="@drawable/round_button"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <com.TolKap.agarshan.tamilwallpaper.custom.CustomFontTextView
        android:layout_width="wrap_content"

android:gravity="center"
        android:textSize="10dp"
        android:textColor="@android:color/white"

        android:layout_height="20dp"
        android:text="SET"/>
    </LinearLayout>
</LinearLayout>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="80dp">
    <ImageButton
        android:id="@+id/favoriteBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_favorite_white_24dp"
        android:background="@drawable/round_button"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <com.TolKap.agarshan.tamilwallpaper.custom.CustomFontTextView
      android:gravity="center"
       android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColor="@android:color/white"
        android:text="FAVORITE"/>
    </LinearLayout>

</LinearLayout>





        </LinearLayout>


        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-7266672635430903/1087524346">
        </com.google.android.gms.ads.AdView>

    </RelativeLayout>



</LinearLayout>