<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:background="@color/colorDarkRed"-->
        <!--android:layout_height="2dp">-->

    <!--</LinearLayout>-->
    <LinearLayout
        android:elevation="10dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="57dp">

        <LinearLayout
            android:background="@drawable/ripple_effect"
            android:id="@+id/recentTab"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <com.TolKap.agarshan.tamilwallpaper.custom.CustomFontTextView
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Recent"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/recentTabColorRl"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_height="3dp">

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/ripple_effect"
            android:id="@+id/allTab"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <com.TolKap.agarshan.tamilwallpaper.custom.CustomFontTextView
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ALL"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/allTabColorRl"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:background="@android:color/white"
                android:layout_height="3dp">

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/ripple_effect"
            android:id="@+id/popularTab"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <com.TolKap.agarshan.tamilwallpaper.custom.CustomFontTextView
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="POPULAR"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/popularTabColorRl"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:background="@android:color/white"
                android:layout_height="3dp">

            </RelativeLayout>
        </LinearLayout>



    </LinearLayout>


    <FrameLayout
        android:layout_marginTop="10dp"
        android:id="@+id/homeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </FrameLayout>
</LinearLayout>